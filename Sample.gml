// =======================
// 标准块状写法
// =======================
if (a > 1) {
    b = 2;
} else {
    b = 3;
}

// =======================
// 多条语句在大括号里
// =======================
if (a > 1) {
    b = 2;
    b = 4;
} else if (a < 1) {
    b = 3;
    b = 4;
} else {
    a = 12344;
}

// =======================
// 单行 if-else（带分号）
// =======================
if (isTrue == xxx) b = 1; else b = 42;

// =======================
// 单行 if-else（无分号也可）
// =======================
if (isTrue == xxx) b = 1 else b = 42;

// =======================
// if 和 else 分行写
// =======================
if (isTrue == xxx) b = 1;
else b = 42;

// =======================
// else 与 if 在下一行缩进
// =======================
if (isTrue == xxx)
    b = 1;
else b = 42;

// =======================
// else 也分行缩进
// =======================
if (isTrue == xxx)
    b = 1;
else
    b = 42;



// =======================
// 标准块状写法（带 then，可选）
// =======================
if (a > 1) then {
    b = 2;
} else {
    b = 3;
}

// =======================
// 多条语句在大括号里（带 then）
// =======================
if (a > 1) then {
    b = 2;
    b = 4;
} else if (a < 1) then {
    b = 3;
    b = 4;
} else {
    a = 12344;
}

// =======================
// 单行 if-else（带 then，分号）
// =======================
if (isTrue == xxx) then b = 1; else b = 42;

// =======================
// 单行 if-else（带 then，无分号也可）
// =======================
if (isTrue == xxx) then b = 1 else b = 42;

// =======================
// if 和 else 分行写（带 then）
// =======================
if (isTrue == xxx) then b = 1;
else b = 42;

// =======================
// else 与 if 在下一行缩进（带 then）
// =======================
if (isTrue == xxx) then
    b = 1;
else b = 42;

// =======================
// else 也分行缩进（带 then）
// =======================
if (isTrue == xxx) then
    b = 1;
else
    b = 42;
