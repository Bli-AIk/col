{
  "image": "mcr.microsoft.com/devcontainers/rust:1-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:1": {
      "installZsh": "true",
      "username": "vscode",
      "uid": "1000",
      "gid": "1000",
      "upgradePackages": "false"
    },
    "ghcr.io/cirolosapio/devcontainers-features/alpine-lazygit:0": {},
    "ghcr.io/helix-editor/helix:latest": {}
  },
  "postCreateCommand": "curl -s https://sh.rustup.rs | sh -s -- -y",
  "initializeCommand": "test -f .env.local || touch .env.local",
  "postStartCommand": "cargo --version && lazygit --version && helix --version",
  "settings": {
    "terminal.integrated.shell.linux": "/usr/bin/zsh"
  }
}
